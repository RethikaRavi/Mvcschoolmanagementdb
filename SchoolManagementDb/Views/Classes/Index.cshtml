@model IEnumerable<SchoolManagementDb.Models.Classes>

@{
    ViewData["Title"] = "Index";
}

<h1>Class Details</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Section)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Standard">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Standard">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Standard">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
